# Enhanced TradingAgents Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# OpenAI API (Required for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# FinnHub API (Required for financial data)
FINNHUB_API_KEY=your_finnhub_api_key_here

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================

# DeepSeek API (Alternative LLM provider)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Reddit API (For sentiment analysis)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Twitter API (For social media analysis)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment (development, testing, production)
TRADING_ENV=development

# Application settings
PROJECT_DIR=.
LOG_LEVEL=INFO
DEBUG=false

# API Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable online data fetching
DISABLE_ONLINE_TOOLS=false

# Enable/disable memory optimizations
ENABLE_MEMORY_CLEANUP=true

# Enable/disable result caching
ENABLE_RESULT_CACHE=true

# Enable/disable detailed logging
ENABLE_DETAILED_LOGGING=false

# ============================================================================
# DATABASE CONFIGURATION (Optional)
# ============================================================================

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL (for result storage)
DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# ============================================================================
# MULTI-STOCK ANALYSIS SETTINGS
# ============================================================================

# Maximum concurrent workers
MAX_WORKERS=3

# Analysis timeout (seconds)
ANALYSIS_TIMEOUT=300

# Default stock list
DEFAULT_STOCK_LIST=test_stocks

# Results directory
RESULTS_DIR=data/results

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# Model selection
DEEP_THINK_LLM=gpt-4o
QUICK_THINK_LLM=gpt-4o-mini

# Model parameters
MAX_DEBATE_ROUNDS=1
MODEL_TEMPERATURE=0.1
MAX_TOKENS=4000

# Request settings
API_RATE_LIMIT=1
API_RETRY_ATTEMPTS=3
API_TIMEOUT=60

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API security
API_KEY_HEADER=X-API-Key
API_SECRET_KEY=your_secret_key_for_api_auth

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus (Metrics)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Log file settings
LOG_FILE=data/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Testing configuration
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Development tools
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# Hot reload
ENABLE_AUTO_RELOAD=true